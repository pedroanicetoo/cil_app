<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">

  <button id="menu-toggle"><i class="material-icons">list</i></button>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  </button>

  <div id="info-site">
    <% if client_signed_in? %>
        <%= link_to('Logout', destroy_client_session_path, method: :delete, :class => "nav-link") %>
        <div class="order-cont shop">
          <button class="shop_car">
            <span class="o-c">
              <i class="material-icons">shopping_cart</i>
              <b><%= @cart_count %></b>
            </span>
          </button>
          <div id="shop_cont">
            <div class="title-cont">
             <b>Carrinho de compras:</b><button id="close_cont"><i class="material-icons">close</i></button>
            </div>
            <div class="body-cont">
              <% if current_client.cart.present? %>
                  <% products_on_cart.each do |p| %>
                    <div class="cart-item">
                      <b>1x <%= p.name %></b>
                      <small><%= humanized_money_with_symbol p.price %></small>
                      <%= link_to site_home_carts_product_path(p), method: :delete, data: { confirm: "Tem certeza?" }, :class => "btn btn-danger btn-sm remove" do %>
                        <i class="material-icons">close</i>
                      <% end %>
                    </div>
                  <% end %>
              <% end %>
            </div>
            <div class="final-cont">
              <%= link_to "Finalizar Compra",  site_checkouts_path, :class => "btn btn-info btn-sm finalize" %>
            </div>
          </div>
        </div>
        <%= link_to(current_client.email, '#', :class => "nav-name") %>
      <% else %>
        <%= link_to('Login', new_client_session_path, :class => "nav-link") %>
      <% end %>
  </div>
</nav>
