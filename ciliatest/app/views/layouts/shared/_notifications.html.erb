<% if notice %>
  <script>
    $(document).ready(function() {
      $.notify( { message: '<%= notice %>' }, { type: 'success', placement: { from: 'top', align: 'center' }});
    });
  </script>
<% end %>
<% if alert %>
  <script>
    $(document).ready(function() {
      $.notify( { message: '<%= alert %>' }, { type: 'danger', placement: { from: 'top', align: 'center' }});
    });
  </script>
<% end %>
