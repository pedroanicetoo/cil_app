<% if notice %>
  <script>
    $(document).ready(function() {
      $.notify({
      message: '<%= notice %>'
    },{
      type: 'success',
      allow_dismiss: true,
      placement: {
        from: 'top',
        align: 'right'
      },
      delay: 2000,
      timer: 1000
      });
    });
  </script>
<% end %>
<% if alert %>
  <script>
    $(document).ready(function() {
      $.notify({
      message: '<%= alert %>'
    },{
      type: 'danger',
      allow_dismiss: true,
      placement: {
        from: 'top',
        align: 'right'
      },
      delay: 2000,
      timer: 1000
      });
    });
  </script>
<% end %>
