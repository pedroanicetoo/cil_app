
<div id="homepage">
  <!-- Page Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-11">
        <div class="filter-container">
          <%= form_tag(site_home_path, :method => 'get') do %>
            <%= text_field_tag(:term, params[:term], :class => "search", :placeholder => "Procurar...") %>
            <%= submit_tag ("Procurar"), :name => nil, :class => 'search-btn' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-1">
        <div class="order-cont">
          <% unless current_client.cart.present? %>
            <%= link_to new_site_home_cart_path, :class => "shop_car" do %>
              <i class="material-icons">shopping_cart</i>
            <% end %>
          <% else %>
            <button class="shop_car"><i class="material-icons">shopping_cart</i></button>
            <%= render partial: 'site/home/shared/car-list' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="row products-show">
          <% @products.each do |product| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
              <div class="thumbnail">
                <%= image_tag product.picture(:medium) %>
                <div class="caption">
                  <div class="price-cont">
                    <b><%= humanized_money_with_symbol product.price %></b>
                  </div>
                  <div class="title-cont">
                    <b><%= product.name %></b>
                  </div>
                  <div class="actions-cont">
                    <div class="buttons">
                      <%= link_to "#", :class => "btn btn-sm btn-success add" do %>
                        <i class="material-icons">add_shopping_cart</i>
                      <% end %>
                      <%= link_to "#", :class => 'btn btn-info btn-sm', :data => { :toggle => "modal", :target => "#modal-#{product.id}" } do %>
                        <i class="material-icons">search</i>
                      <% end %>
                      <%#= link_to site_home_path "Comprar", :class => "btn" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%= render partial: 'site/home/shared/info-modal', locals: { id: "#{product.id}", name: "#{product.name}", description: "#{product.description}", price: "#{product.price}", picture: "#{product.picture(:large)}" } %>
          <% end %>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-md-12">
        <center class="paginate-row" >
          <%= will_paginate (@products), :page_links => true, :previous_label => 'Anterior', :next_label => 'PrÃ³ximo', :inner_window => 1, :outer_window => 0 %>
        </center>
      </div>
    </div>

  </div>
  <!-- /.container -->

  <div class="container">
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2019</p>
            </div>
        </div>
    </footer>

  </div>
  <!-- /.container -->

</div>
